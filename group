    <script>
        // --- LOGIC PWA INSTALLATION ---
        let deferredPrompt;
        const installContainer = document.getElementById('install-container');
        const installButton = document.getElementById('install-button');

        window.addEventListener('beforeinstallprompt', (e) => {
            // Mencegah Chrome di Android menampilkan prompt default mini
            e.preventDefault();
            // Simpan event untuk dipanggil nanti
            deferredPrompt = e;
            // Tampilkan tombol install custom kita
            installContainer.classList.remove('hidden');
        });

        installButton.addEventListener('click', async () => {
            if (deferredPrompt) {
                // Tampilkan prompt instalasi asli
                deferredPrompt.prompt();
                // Tunggu respon user
                const { outcome } = await deferredPrompt.userChoice;
                console.log(`User response: ${outcome}`);
                // Reset variable karena prompt hanya bisa dipakai sekali
                deferredPrompt = null;
                // Sembunyikan tombol
                installContainer.classList.add('hidden');
            }
        });

        // --- LOGIC JOIN & SHARE ---
        function joinGroup(url) {
            const btn = event.currentTarget;
            const originalText = btn.innerText;
            
            // Feedback visual loading
            btn.disabled = true;
            btn.innerHTML = '<i class="bi bi-arrow-clockwise animate-spin"></i> Memproses...';
            btn.classList.add('opacity-75');
            
            setTimeout(() => {
                window.location.href = url;
                // Reset button state (jika user kembali)
                setTimeout(() => {
                    btn.disabled = false;
                    btn.innerText = originalText;
                    btn.classList.remove('opacity-75');
                }, 1000);
            }, 800);
        }

        function shareTo(platform) {
            event.stopPropagation();
            const currentUrl = encodeURIComponent(window.location.href);
            const text = encodeURIComponent("Ayo gabung grup viral ini! Banyak update terbaru üî•");
            let shareUrl = "";

            if (platform === 'wa') {
                shareUrl = `https://wa.me/?text=${text}%20${currentUrl}`;
            } else if (platform === 'fb') {
                shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${currentUrl}`;
            } else if (platform === 'x') {
                shareUrl = `https://twitter.com/intent/tweet?text=${text}&url=${currentUrl}`;
            }

            window.open(shareUrl, '_blank');
        }

        // --- SERVICE WORKER REGISTRATION (Untuk PWA Offline) ---
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                // Kita mendaftarkan sw.js (file ini harus ada di root server Anda)
                // Karena ini single file demo, kode di bawah hanya placeholder untuk struktur PWA
                navigator.serviceWorker.register('/sw.js').then(registration => {
                    console.log('SW registered: ', registration);
                }).catch(registrationError => {
                    console.log('SW registration failed: ', registrationError);
                });
            });
        }
    </script>
